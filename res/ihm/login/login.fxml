<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="CENTER" minHeight="600" minWidth="400" xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="vce.vues.controllers.login.LoginCtrl">
    <children>
        <Label text="Log-In"/>
        <HBox alignment="CENTER" spacing="20.0">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Pseudo :" textAlignment="RIGHT"/>
                <ComboBox fx:id="champPseudo" prefWidth="150.0" promptText="Account"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Mot de passe :" textAlignment="RIGHT"/>
                <PasswordField fx:id="champMdp"/>
            </children>
        </HBox>
        <HBox alignment="CENTER" minHeight="0.0" minWidth="0.0" spacing="20.0">
            <children>
                <Button fx:id="btnLogin" onAction="#tryLogin" text="_login"/>
                <Button fx:id="btnInscription" onAction="#goToInscription" text="_Inscription"/>
            </children>
            <VBox.margin>
                <Insets/>
            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
